<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_company_logo_image_view"
                android:layout_width="@dimen/image_height"
                android:layout_height="@dimen/image_width"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_company_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_for_text"
                android:layout_marginTop="@dimen/margin_top_for_text"
                android:text="@string/default_name"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/item_company_logo_image_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_company_symbol_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_for_text"
                android:layout_marginTop="@dimen/margin_top_for_text"
                android:text="@string/default_name"
                android:textSize="@dimen/min_text_size"
                app:layout_constraintStart_toEndOf="@+id/item_company_logo_image_view"
                app:layout_constraintTop_toBottomOf="@+id/item_company_name_text_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>